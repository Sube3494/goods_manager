# ================================
# 数据库
# ================================
DATABASE_URL="postgresql://goods_user:your_password@postgres:5432/goods_manager"

# ================================
# 授权密钥（用于 JWT 签名，请随机生成）
# openssl rand -base64 32
# ================================
AUTH_SECRET="your-secret-key-change-this"

# ================================
# SMTP 邮件（可选，用于邮件通知）
# ================================
SMTP_HOST=smtp.qq.com
SMTP_PORT=465
SMTP_USER=your@email.com
SMTP_PASS=your_smtp_app_password
SMTP_FROM="PicNote <your@email.com>"
SMTP_SECURE=true

